{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch Main",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/chess-engine-api/Chess/main", // Path to main program
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
